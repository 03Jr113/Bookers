<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <th>
        <%= book.title %>
      </th>
      <th>
        <%= book.body %>
      </th>
      <th>
        <%= link_to 'Show', book_path(book.id) %>
      </th>
      <th>
        <%= link_to 'Edit', edit_book_path(book.id) %>
      </th>
      <th>
        <%= link_to 'Destroy', book_path(book.id), method: :delete %>
      </th>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New Book</h2>

<div class="error-message">
<% if @book.errors.any? %>
  <%= @book.errors.count%>errors prohibited this book from being saved
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <div class="field">
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body, 'Body' %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>